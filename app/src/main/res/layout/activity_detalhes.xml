<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.DetalhesActivity">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swpDetalhes"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lnTudo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margem_superior_detalhe"
                android:contentDescription="@string/desc_local"
                android:src="@drawable/ic_map_marker"/>

            <TextView
                android:id="@+id/txtCidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margem_superior"
                android:gravity="center"
                android:text=""
                android:textColor="@color/cor_texto_forte"
                android:textSize="26sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margem_superior_detalhe"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgClima"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/desc_clima"
                        android:src="@drawable/i01d"/>

                    <TextView
                        android:id="@+id/txtClima"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/semi_escuro"
                        android:textSize="15sp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/txtTemperatura"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margem_temperatura"
                    android:layout_marginRight="@dimen/margem_temperatura"
                    android:layout_weight="0.4"
                    android:gravity="end"
                    android:text=""
                    android:textColor="@color/cor_texto_forte"
                    android:textSize="40sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txtMaxMin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margem_temperatura"
                android:layout_marginRight="@dimen/margem_temperatura"
                android:gravity="end"
                android:text=""/>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>